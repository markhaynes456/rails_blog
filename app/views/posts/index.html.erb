<% @post_n = 0 %>
<% @posts.each do |post| %>
		<% @post_n += 1 =%>
		<% if @post_n == 1 %>
  		<div class="row">
		<% end %>
		 <div class="small-2 large-4 columns greensea">
			<div class="greensea" >
			<h2> <%= post.title %> </h2>
			<p><%= post.slug[0..100]  %>...</p>
			<%= link_to "View '#{post.title}'", post, :class => 'button' %>
			</div>
		</div>
		<% if @post_n == 3  %>
			<% @post_n = 0 %>
			</div>
		<% end %>
<% end  %>
